<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.HolidaySettingsScreenController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="In Holiday Mode you will only receive notifications of emails from specific senders and/or emails where the subject or body contains certain keywords." textAlignment="CENTER" wrappingWidth="450.0" />
            <GridPane prefHeight="210.0" prefWidth="580.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="220.6666463216146" minWidth="10.0" prefWidth="220.6666463216146" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0000203450521" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <RadioButton fx:id="sendersRadioButton" mnemonicParsing="false" text="Only allow email notifications from these senders:" wrapText="true" />
                  <RadioButton fx:id="keywordsRadioButton" mnemonicParsing="false" text="Only allow email notifications where they contain these keywords:" wrapText="true" GridPane.rowIndex="1" />
                  <VBox alignment="CENTER" spacing="5.0" GridPane.columnIndex="1">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Please enter the email addresses you would like to allow, separated by a semicolon ';'" wrappingWidth="325.0" />
                        <TextField fx:id="sendersTextField" />
                     </children>
                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                  </VBox>
                  <VBox alignment="CENTER" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Please enter the keywords you would like to allow, separated by a semicolon ';'" wrappingWidth="325.0" />
                        <TextField fx:id="keywordsTextField" />
                     </children>
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                  </VBox>
                  <RadioButton fx:id="importantRadioButton" mnemonicParsing="false" text="Only allow email notifications where the emails are flagged as 'Important'" wrapText="true" GridPane.rowIndex="2" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
